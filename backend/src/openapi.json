{
  "openapi": "3.0.0",
  "info": {
    "title": "GBS Learning Hub API",
    "version": "1.0.0"
  },
  "paths": {
    "/content/modules": {
      "get": {
        "summary": "List modules",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "A list of modules",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Module" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Module": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    }
  }
}
